    <ol class="breadcrumb">
        <li><a href="{{ Url.build('/') }}"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Report</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <i class="ion ion-arrow-graph-up-right"></i>
              <h3 class="box-title">Report compleanni</h3>
            </div>
            <form id="reportBirthdays" onsubmit="event.preventDefault();" class="form-horizontal">
              <div class="box-body">
                <div class="form-group">
                  <label for="month" class="col-sm-2 control-label required">Mese</label>
                  <div class="col-sm-10">
                    {{ _view.Form.month('month',{ 'class':'form-control required','required':'required'}) |raw }}
                  </div>
                </div>
                  <div class="form-group">
                    <label for="month" class="col-sm-2 control-label ">Gruppo Aziendale</label>
                    <div class="col-sm-10">
                      <select name="gruppi" class="form-control" >
                      <option value="0">Tutti</option>
                      {% for gruppo in gruppi %}
                          <option value="{{ gruppo.id }}">{{ gruppo.text }}</option>
                      {% endfor %}
                      </select>
                    </div>
                  </div>
              </div>
              <div class="box-footer">
                <a class="btn btn-success pull-right xls-reportBirthdays"><i class="fa fa-file-excel-o"></i> Genera Excel</a>
                <a class="btn btn-default pull-right stamp-reportBirthdays" style="margin-right:10px;"><i class="fa fa-print"></i> Stampa</a>
              </div>
            </form>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <i class="ion ion-email"></i>
              <h3 class="box-title">Indirizzario</h3>
            </div>
            <form id="reportIndirizzario" onsubmit="event.preventDefault();" class="form-horizontal">
              <div class="box-body">
                  <div class="form-group">
                    <label class="col-sm-2 control-label required">Gruppo Aziendale</label>
                    <div class="col-sm-10">
                      <select name="gruppi" class="form-control required" >
                      <option></option>
                      {% for gruppo in gruppi %}
                          <option value="{{ gruppo.id }}">{{ gruppo.text }}</option>
                      {% endfor %}
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Servizio</label>
                    <div class="col-sm-10">
                      <select name="servizi" class="form-control" >
                      <option value="0">Tutti</option>
                      {% for service in services %}
                          <option value="{{ service.id }}">{{ service.text }}</option>
                      {% endfor %}
                      </select>
                    </div>
                  </div>
              </div>
              <div class="box-footer">
                <a class="btn btn-success pull-right xls-reportIndirizzario"><i class="fa fa-file-excel-o"></i> Genera Excel</a>
                <a class="btn btn-default pull-right stamp-reportIndirizzario" style="margin-right:10px;"><i class="fa fa-print"></i> Stampa</a>
              </div>
            </form>
